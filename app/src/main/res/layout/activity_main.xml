<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/character"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/titleTextView"
        style="@style/TextFrame.TextView.Large"
        app:layout_constraintBottom_toTopOf="@+id/horizontalGuideline45"
        app:layout_constraintTop_toTopOf="@+id/horizontalGuideline30" />

    <TextView
        android:id="@+id/questionTextView"
        style="@style/TextFrame.TextView"
        app:layout_constraintBottom_toTopOf="@+id/horizontalGuideline65"
        app:layout_constraintTop_toTopOf="@+id/horizontalGuideline55" />

    <EditText
        android:id="@+id/setNameEditText"
        style="@style/entryField"
        android:hint="@string/setName"
        app:layout_constraintBottom_toTopOf="@id/horizontalGuideline85"
        app:layout_constraintTop_toTopOf="@id/horizontalGuideline75" />

    <Button
        android:id="@+id/buttonOption1"
        style="@style/TextFrame.Button"
        app:layout_constraintBottom_toTopOf="@+id/horizontalGuideline75"
        app:layout_constraintTop_toTopOf="@+id/horizontalGuideline65" />

    <Button
        android:id="@+id/buttonOption2"
        style="@style/TextFrame.Button"
        app:layout_constraintBottom_toTopOf="@+id/horizontalGuideline85"
        app:layout_constraintTop_toTopOf="@+id/horizontalGuideline75" />

    <Button
        android:id="@+id/buttonOption3"
        style="@style/TextFrame.Button"
        app:layout_constraintBottom_toTopOf="@+id/horizontalGuideline95"
        app:layout_constraintTop_toTopOf="@+id/horizontalGuideline85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGuideline95"
        style="@style/horizontalGuideline"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGuideline85"
        style="@style/horizontalGuideline"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGuideline75"
        style="@style/horizontalGuideline"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGuideline65"
        style="@style/horizontalGuideline"
        app:layout_constraintGuide_percent="0.65" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGuideline55"
        style="@style/horizontalGuideline"
        app:layout_constraintGuide_percent="0.55" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGuideline45"
        style="@style/horizontalGuideline"
        app:layout_constraintGuide_percent="0.45" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGuideline30"
        style="@style/horizontalGuideline"
        app:layout_constraintGuide_percent="0.3" />

</androidx.constraintlayout.widget.ConstraintLayout>