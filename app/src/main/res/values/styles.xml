<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextFrame">
        <item name="android:visibility">invisible</item>
        <item name="autoSizeMaxTextSize">55sp</item>
        <item name="autoSizeMinTextSize">10sp</item>
        <item name="autoSizeStepGranularity">5sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextFrame.Button">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="backgroundTint">@null</item>
        <item name="cornerRadius">0dp</item>
    </style>

    <style name="TextFrame.TextView">
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@color/dark</item>
    </style>

    <style name="TextFrame.TextView.Large">
        <item name="android:background">@color/light</item>
        <item name="autoSizeMaxTextSize">100sp</item>
        <item name="android:fontFamily">@font/quattrocento_sans</item>
    </style>

    <style name="horizontalGuideline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="entryField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">35</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:visibility">invisible</item>
    </style>
</resources>